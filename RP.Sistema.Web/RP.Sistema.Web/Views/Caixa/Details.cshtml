@model RP.Sistema.Web.Models.Caixa.CaixaVM
@using RP.Util;
@using RP.Util.Class;
@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
            <div class="container-nav-list well affix">
                <ul class="nav nav-list">
                    <li class="nav-header">Ações</li>
                    <li><a href="@Url.Action("Index")" title="Volta para tela inicial"><i class="icon-arrow-left"></i>Voltar</a></li>
                </ul>
            </div>
        </div>
        <div class="span10">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index")">Início</a> <span class="divider">/</span></li>
                <li class="active">Detalhes da conta</li>
            </ul>
            <div class="form-horizontal">
                @if (Model.Projeto != null && Model.Projeto.idProjeto != null)
                {
                    @Html.EditorFor(model => model.Projeto, "Projeto/Consultar", new { desabilitar = true })
                }

                @if (Model.Cliente != null)
                {
                    @Html.EditorFor(model => model.Cliente, "Cliente/Consultar", new { desabilitar = true })
                }

                @if (Model.Fornecedor != null)
                {
                    @Html.EditorFor(model => model.Fornecedor, "Fornecedor/Consultar", new { desabilitar = true })
                }

                @if (Model.Funcionario != null)
                {
                    @Html.EditorFor(model => model.Funcionario, "Funcionario/Consultar", new { desabilitar = true })
                }
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.descricao, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextAreaFor(model => model.descricao, new { @class = "span6", @readonly = "readonly" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.situacao, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.situacao, new { @class = "span2", @readonly = "readonly" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.dtLancamento, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.dtLancamento, new { @class = "input-small", @mask = "99/99/9999", @readonly = "readonly" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.saldoAnterior, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.saldoAnterior, new { @class = "input-small", style = "text-align:right", @readonly = "readonly" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.valor, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.valor, new { @class = "input-small", style = "text-align:right", @readonly = "readonly" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.CustomLabelFor(model => model.saldoAtual, new { @class = "control-label" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.saldoAtual, new { @class = "input-small", style = "text-align:right", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
